<div class="profile-container max-w-xl mx-auto mt-10 p-6 bg-white rounded-2xl shadow-lg">
  <h1 class ="text-center ">Mon Profil </h1>

  <div class="profile-card space-y-2 text-gray-700 ">
  <br>

  <br>
<div class="card-body">
  <%# Photo de profil à gauche %>
  <div style="width: 200px; height: 200px;">
    <% if @user.photo.attached? %>
  <%= cl_image_tag @user.photo.key,
              class: "profilavatar",
              alt: "Photo de profil" %>
    <% else %>
      <div class="profilavatar d-flex justify-content-center align-items-center"
           style="width: 200px; height: 200px;">
        <i class="bi bi-person" style="font-size: 50px; color: gray;"></i>
      </div>
    <% end %>
  </div>
  <br>

  <%# Infos utilisateur à droite %>
  <ul class="list-group list-group-flush text-center">
    <li class="list-group-item"><strong>Nom :</strong> <%= @user.name %></li>
    <li class="list-group-item"><strong>Email :</strong> <%= @user.email %></li>
    <li class="list-group-item"><strong>Âge :</strong> <%= @user.age %> ans</li>
    <li class="list-group-item"><strong>Taille :</strong> <%= @user.height %> cm</li>
    <li class="list-group-item"><strong>Poids :</strong> <%= @user.weight %> kg</li>
     <%= link_to "Modifier mes informations", edit_user_registration_path(@user), class: "btn btn-success" %>
  </ul>
</div>
  <div class="actions">
    <%# action supplémentaires %>
     <%= link_to "se deconecté",
            destroy_user_session_path,
            data: { turbo_method: :delete },
            class: "dropdown-item" %>
  </div>
</div>
